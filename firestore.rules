rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Allow users to read/write their own user doc and subcollections
    match /users/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if request.auth != null && request.auth.uid == userId;

      match /completedScans/{scanId} {
        allow read: if request.auth != null && request.auth.uid == userId;
        // Creation of user-visible entries can be allowed for client
        allow create: if request.auth != null && request.auth.uid == userId;
        // Updates/deletes should generally be server-only (Admin SDK).
        allow update, delete: if false;
      }
    }

    // Allow users to read their own global scans (used by fallback queries)
    match /scans/{scanId} {
      allow read: if request.auth != null && request.auth.uid == resource.data.userId;
      // Prevent client-side writes to global scans (server/admin only)
      allow write: if false;
    }

    // Activity logs - users can read their own
    match /activityLogs/{logId} {
      allow read: if request.auth != null && request.auth.uid == resource.data.userId;
      allow write: if false; // Server-only writes via Admin SDK
    }

    // Manual tests - users can read their own
    match /manualTests/{testId} {
      allow read: if request.auth != null && request.auth.uid == resource.data.userId;
      allow write: if false; // Server-only writes via Admin SDK
    }

    // Findings - users can read their own
    match /findings/{findingId} {
      allow read: if request.auth != null && request.auth.uid == resource.data.userId;
      allow write: if false; // Server-only writes via Admin SDK
    }

    // Engagements - users can read their own
    match /engagements/{engagementId} {
      allow read: if request.auth != null && request.auth.uid == resource.data.createdBy;
      allow write: if false; // Server-only writes via Admin SDK
    }

    // AI Pentest runs - users can read their own
    match /aiPentestRuns/{runId} {
      allow read: if request.auth != null && request.auth.uid == resource.data.userId;
      allow write: if false; // Server-only writes via Admin SDK
    }
  }
}
